{
    "manifest_version": 2,
    "name": "Novus",
    "description": "The ultimate new tab window",
    "version": "1.0",
    "author": "Roy Prigat",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "novus.png",
        "default_title": "Novus New Tab"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "options_page": "options.html",
    "permissions": [
        "identity",
        "storage",
        "bookmarks", 
        "geolocation",
        "*://*.api.unsplash.com//*"
    ],
    "oauth2": {
        "client_id": "413690262998-i050041d7fqtak7ib0qiuua773hf4c83.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/contacts.readonly",
            "https://www.googleapis.com/auth/gmail.readonly"
        ]
    },
    "icons": {
        "16": "novus.png",
        "32": "novus.png",
        "48": "novus.png",
        "128": "novus.png"
    },
    "key": ""
}